<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :details, placeholder: "Compose new event..." %>
  </div>
   <div class="field">
    <%= f.text_field :address, placeholder: "Where ..." %>
  </div>
  <div class="field">
    <%= f.datetime_select :start_time %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
