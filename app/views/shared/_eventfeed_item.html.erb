<li id="<%=eventfeed_item.id %>">
  <%= link_to gravatar_for(eventfeed_item.user), eventfeed_item.user %>
    <span class="user">
      <%= link_to eventfeed_item.user.name, eventfeed_item.user %>
    </span>
    <span class="content"><%= eventfeed_item.details %></span>
  
    
       <%= render 'shared/eventfollow_form',object:eventfeed_item if signed_in? %>
       
    
    <span class="timestamp">
      Posted <%= time_ago_in_words(eventfeed_item.created_at) %> ago.
    </span>
    <span class="timestamp">
      Starting <%= distance_of_time_in_words_to_now(eventfeed_item.start_time) %>  at  <%= eventfeed_item.address %>.
    </span>
  <% if current_user?(eventfeed_item.user) %>
    <%= link_to "delete", eventfeed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: eventfeed_item.details %>
  <% end %>
</li>
